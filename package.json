{
  "name": "solar-dashboard",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "npx concurrently \"vite --open\" \"npx wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "dist": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.solardashboard.app",
    "productName": "Solar Dashboard",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.7.0",
    "vite": "^5.0.0"
  }
}
